<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context=".SecondActivity">

    <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="330dp">

        <LinearLayout
                android:background="@drawable/bg_header"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="270dp">

            <ImageView
                    android:layout_marginTop="24dp"
                    android:layout_gravity="center"
                    android:src="@drawable/mine"
                    android:layout_width="90dp"
                    android:layout_height="90dp"/>

            <TextView
                    android:layout_gravity="center"
                    android:layout_marginTop="18dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#fff"
                    android:textSize="28sp"
                    android:text="ATM/BANK Terdekat"/>

            <TextView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="By Vincentius"
                    android:textColor="#fff"
                    android:layout_marginTop="8dp"
            />

        </LinearLayout>

        <android.support.v7.widget.CardView
                android:layout_marginTop="230dp"
                android:background="#fff"
                android:layout_width="300dp"
                android:layout_centerHorizontal="true"
                android:layout_height="80dp">

            <LinearLayout
                    android:layout_gravity="center"
                    android:weightSum="3"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                
                <LinearLayout
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    <TextView
                            android:layout_gravity="center"
                            android:textColor="#4a4a4a"
                            android:text="nearby "
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    <TextView
                            android:layout_gravity="center"
                            android:textStyle="bold"
                            android:textSize="24dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="22"/>

                </LinearLayout>
                <LinearLayout
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    <TextView
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:textColor="#4a4a4a"
                            android:text="Longtitude"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    <Button
                            android:id="@+id/clickme"
                            android:background="@drawable/edit_text_rounded2"
                            android:layout_gravity="center"
                            android:textStyle="bold"
                            android:textSize="20dp"
                            android:layout_width="wrap_content"
                            android:layout_height="25dp"
                            android:text="Click Here"/>

                </LinearLayout>
                <LinearLayout
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    <TextView
                            android:layout_gravity="center"
                            android:textColor="#4a4a4a"
                            android:text="position "
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    <TextView
                            android:id="@+id/welcome"
                            android:layout_gravity="center"
                            android:textStyle="bold"
                            android:textSize="16dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Jakarta"/>

                </LinearLayout>
            </LinearLayout>
            
        </android.support.v7.widget.CardView>

    </RelativeLayout>
    <ScrollView android:layout_width="match_parent" android:layout_height="match_parent"
                android:layout_alignParentStart="true">
        <LinearLayout

                android:layout_gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <TextView
                    android:layout_marginTop="30sp"
                    android:textSize="22sp"
                    android:text="List Atm"
                    android:gravity="center"
                    android:layout_marginBottom="38dp"
                    android:textColor="#4a4a4a"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            <LinearLayout
                    android:background="@drawable/bg_item"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:layout_marginLeft="32dp"
                    android:layout_marginRight="32dp">

                <ImageView
                        android:layout_marginRight="10dp"
                        android:src="@drawable/bca"
                        android:layout_width="90dp"
                        android:layout_height="60dp"/>

                <LinearLayout
                        android:layout_marginTop="3dp"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    <TextView
                            android:text="Bank Central Asia"
                            android:textSize="18dp"
                            android:textColor="#4a4a4a"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                    >
                        <TextView
                                android:text="Letak / Posisi :"
                                android:textSize="13dp"
                                android:textColor="#4a4a4a"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        <TextView
                                android:id="@+id/b1"
                                android:text="none"
                                android:textSize="13dp"
                                android:textColor="#4a4a4a"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                    android:layout_marginTop="10dp"
                    android:background="@drawable/bg_item"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:layout_marginLeft="32dp"
                    android:layout_marginRight="32dp">

                <ImageView
                        android:layout_marginRight="10dp"
                        android:src="@drawable/mandiri"
                        android:layout_width="90dp"
                        android:layout_height="60dp"/>

                <LinearLayout
                        android:layout_marginTop="3dp"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    <TextView
                            android:text="Bank Mandiri"
                            android:textSize="18dp"
                            android:textColor="#4a4a4a"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                    >
                        <TextView
                                android:text="Letak / Posisi :"
                                android:textSize="13dp"
                                android:textColor="#4a4a4a"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        <TextView
                                android:id="@+id/b2"
                                android:text="none"
                                android:textSize="13dp"
                                android:textColor="#4a4a4a"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                    android:layout_marginTop="10dp"
                    android:background="@drawable/bg_item"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:layout_marginLeft="32dp"
                    android:layout_marginRight="32dp">

                <ImageView
                        android:layout_marginRight="10dp"
                        android:src="@drawable/brii"
                        android:layout_width="90dp"
                        android:layout_height="60dp"/>

                <LinearLayout
                        android:layout_marginTop="3dp"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    <TextView
                            android:text="Bank Rakyat Indonesia"
                            android:textSize="14dp"
                            android:textColor="#4a4a4a"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                    >
                        <TextView
                                android:text="Letak / Posisi :"
                                android:textSize="13dp"
                                android:textColor="#4a4a4a"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        <TextView
                                android:id="@+id/b3"
                                android:text="none"
                                android:textSize="13dp"
                                android:textColor="#4a4a4a"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                    android:layout_marginTop="10dp"
                    android:background="@drawable/bg_item"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:layout_marginLeft="32dp"
                    android:layout_marginRight="32dp">

                <ImageView
                        android:layout_marginRight="10dp"
                        android:src="@drawable/bri"
                        android:layout_width="90dp"
                        android:layout_height="60dp"/>

                <LinearLayout
                        android:layout_marginTop="3dp"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    <TextView
                            android:text="Bank Nasional Indoesia"
                            android:textSize="15dp"
                            android:textColor="#4a4a4a"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                    >
                        <TextView
                                android:text="Letak / Posisi :"
                                android:textSize="13dp"
                                android:textColor="#4a4a4a"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        <TextView
                                android:id="@+id/b4"
                                android:text="none"
                                android:textSize="13dp"
                                android:textColor="#4a4a4a"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>


        </LinearLayout>
    </ScrollView>
    
</LinearLayout>